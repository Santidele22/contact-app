---
import { Image } from "astro:assets";
import avatarImage from "@assets/logo.webp";
---

<div class="avatar">
  <Image src={avatarImage} alt="Avatar" />
</div>
<style>
  .avatar {
    border-radius: 50%;
    overflow: hidden;
    width: 100px;
    height: 100px;
  }

  .avatar img {
    min-width: 100%;
    height: auto;
    object-fit: contain;
    aspect-ratio: 3:2;
  }
</style>
