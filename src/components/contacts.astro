---
import { sections } from "@mockups/sections";
---

<ul class="links-list">
  {
    sections.map((section) => (
        <h3>{section.title}</h3> 
      <li class="link-item" style="width: 100%;">
        <a href={section.href} target="_blank" rel="noopener noreferrer">
          {section.text}
        </a>
      </li>
    ))
  }
</ul>
<style>
  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .link-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    border-radius: 6px;
  }
  .link-item h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    color: #fff;
  }
  .link-item a {
    color: #90cdf4;
    text-decoration: none;
    font-weight: 500;
  }
  .link-item a:hover {
    text-decoration: underline;
  }
</style>
